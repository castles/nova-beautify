{
  "identifier": "patrickvuarnoz.beautify",
  "name": "Beautify",
  "organization": "Patrick A. Vuarnoz",
  "description": "Format Javascript, CSS, HTML and similar syntaxes using JS-Beautify.",
  "version": "1.0.2",
  "categories": ["formatters", "commands"],
  
  "main": "main.js",

  "activationEvents": [ 

  ],

  "entitlements": {

  },

  "commands": {
    "editor": [{
        "title": "Format",
        "paletteTitle": "Format",
        "command": "beautify.format",
        "shortcut": "opt-shift-f",
        "when": "editorHasFocus",
        "filters": {
            "syntaxes": ["javascript", "typescript", "json", "css", "less", "scss", "html", "xml", "svg"]
        }
      },
      {
        "title": "Format selection",
        "paletteTitle": "Format selection",
        "command": "beautify.formatSelection",
        "when": "editorHasFocus && editorHasSelection",
        "filters": {
            "syntaxes": ["javascript", "typescript", "json", "css", "less", "scss", "html", "xml", "svg"]
        }
      }
    ]
  },
  
  "bugs": "https://github.com/patrickvuarnoz/nova-beautify/issues",
  "repository": "https://github.com/patrickvuarnoz/nova-beautify"
}
